<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#00f300"
    tools:context="com.example.productmarketing.MainActivity" >

    <ImageView
        android:id="@+id/ab_intro_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/ab_intro_bg" />

    <ImageView
        android:id="@+id/ab_intro_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="10sp"
        android:scaleType="centerInside"
        android:src="@drawable/logo_small" />

    <android.support.v4.view.ViewPager
        android:id="@+id/ab_intro_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ab_intro_jieshao" >
    </android.support.v4.view.ViewPager>

    <ImageView
        android:id="@+id/ab_intro_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/back" />

    <include
        android:id="@+id/intro_menu"
        layout="@layout/diamondbrite" />

    <ImageView
        android:id="@+id/ab_intro_jieshao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:scaleType="centerInside"
        android:layout_alignParentTop="true"
        android:src="@drawable/ab_intro_title" />

</RelativeLayout>